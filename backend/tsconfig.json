{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "jest"],
    "baseUrl": "./",
    "paths": {
      "@my-app/shared": ["../shared/src"],
      "@my-app/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "files": ["./src/types/express/index.d.ts"],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
